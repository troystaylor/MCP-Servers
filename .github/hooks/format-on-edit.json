{
  "hooks": {
    "PostToolUse": [
      {
        "type": "command",
        "toolNames": [
          "create_file",
          "replace_string_in_file",
          "multi_replace_string_in_file"
        ],
        "command": "[ -f \"$TOOL_INPUT_FILE_PATH\" ] && npx prettier --write \"$TOOL_INPUT_FILE_PATH\" || true",
        "windows": "if exist \"%TOOL_INPUT_FILE_PATH%\" (npx prettier --write \"%TOOL_INPUT_FILE_PATH%\") else (echo skipped)",
        "timeout": 15
      }
    ]
  }
}
