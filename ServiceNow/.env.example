# ServiceNow MCP Server — Environment Variables
# Copy to .env and fill in your values.

# ServiceNow OAuth 2.0 credentials (Password Grant)
# Register an OAuth application in ServiceNow Application Registry first.
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=
SERVICENOW_CLIENT_ID=
SERVICENOW_CLIENT_SECRET=

# better-auth session secret — pin for stable sessions across restarts
# BETTER_AUTH_SECRET=<random 48+ char string>

# Agent 365 Observability (optional)
# ENABLE_OBSERVABILITY=true                 # enable console trace exporter
# ENABLE_A365_OBSERVABILITY_EXPORTER=true   # export to Agent 365 service
# A365_OBSERVABILITY_LOG_LEVEL=none         # none | info | warn | error

# Entra Agent Identity (required when ENABLE_A365_OBSERVABILITY_EXPORTER=true)
# TENANT_ID=                                # Azure Entra tenant ID
# AGENT_BLUEPRINT_ID=                       # Agent blueprint app registration ID
# AGENT_BLUEPRINT_CLIENT_SECRET=            # Client secret for the blueprint
